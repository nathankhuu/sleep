<div id="wrapper">

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="/users/index">
                    Sleep Diary Options
                </a>
            </li>
            <li>
                <a href="/entries/new">Edit Diary Entries</a>
            </li>
            <li>
                <a href="/users/calendar">View Sleep History</a>
            </li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                		<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a></br>
                		<h3>Showing Date with Hours of Sleep. If entry exists, click on date to see more details of entry.</h3>
                    <%= month_calendar do |date| %>
                    	<%lookup = Entry.where(day: date) %>
											<%if lookup.length > 0%>
												<%= link_to date.month.to_s + '/' + date.day.to_s, entries_show_path(id: lookup[0].id) %></br>
												Hours: <%=lookup[0].sleep_hours%>
											<%else%>
												<%= date.month.to_s + '/' + date.day.to_s %></br>
											<%end%>
										<% end %>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>